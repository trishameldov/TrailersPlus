<div class="white-popup tp-popup tp-popup--popular-parts mfp-hide" id="parts-{{ slideIndex }}">
    <div class="tp-popup__body-clear">
        <div class="tp-popup__row">
            <!-- Slider -->
            <div class="tp-popup__col">
                <!-- Slider Container -->
                <div class="tp-swiper js-swiper  p-relative">
                    <div class="tp-swiper__container swiper-container" 
                        data-slides="1"
                        data-speed="700"
                        data-loop="true"
                        data-observe-parents="true"
                        data-simulate_touch="true"
                    >
                        <div class="swiper-wrapper tp-swiper__wrapper">

                            {% for imagePath in data.slideImagePaths %}
                                <div class="swiper-slide tp-swiper__slide p-relative bg-img">
                                    <picture>
                                        <source data-srcset="./img/webp/{{ imagePath }}.webp" type="image/webp" srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="> 
                                        <source data-srcset="./img/{{ imagePath }}.jpg" type="image/jpeg" srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="> 
                                        <img data-src="./img/{{ imagePath }}.jpg" alt="alt" class="lazyload" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==">
                                    </picture>
                                </div>
                            {% endfor %}

                        </div>
                    </div>

                    <!-- Slider Navigation -->
                    <div class="swiper-pagination tp-swiper__pagination"></div>
                    <div class="swiper-button-prev tp-swiper__prev"></div>
                    <div class="swiper-button-next tp-swiper__next"></div>
                </div>
            </div>
            
            <!-- Content -->
            <div class="tp-popup__col">
                <h3 class="h3">{{ data.title | safe }}</h3>
                <div class="h4 c-alter fw500 margin-20b">${{ data.const | safe }}</div>
                <div class="c-blue-dark fz15 lh26 margin-25b">
                    <p>{{ data.desc | safe }}</p>
                </div>

                {% if(data.list) %}
                    <ul class="tp-check-list">
                        {% for item in data.list %}
                            <li>{{ item | safe }}</li>
                        {% endfor %}
                    </ul>        
                {% endif %}      
            </div>
        </div>
    </div>
</div>