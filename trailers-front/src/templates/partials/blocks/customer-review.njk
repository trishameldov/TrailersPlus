<div class="tp-review-slider">
    <div class="tp-review-slider__bg bg-img">
        <picture>
            <source data-srcset="./img/webp/img-links/img1-min.webp" type="image/webp"  srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==">
            <source data-srcset="./img/img-links/img1-min.jpg" type="image/jpeg" srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==">
            <img data-src="./img/img-links/img1-min.jpg" alt="Factory Direct" class="lazyload" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==">
        </picture>
    </div>
    <h3 class="c-white h3 margin-0t p-relative z-index">Customer Reviews</h3>
    <div class="tp-review-slider__content">
        <div class="tp-swiper tp-swiper--review-2 js-swiper">
            <div class="tp-swiper__container swiper-container" 
                data-slides="1" data-simulate_touch="true"
                data-loop="true" data-speed="1000" data-autoplay="4000"
            >
                <div class="swiper-wrapper tp-swiper__wrapper">
                    {% for item in reviews %}
                        <div class="swiper-slide tp-swiper__slide">
                            <div class="tp-review tp-review--white">
                                <p class="tp-review__text">
                                    {{ item.text }}
                                </p>
                                <span class="tp-review__author d-block">{{ item.author }}</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="swiper-pagination tp-swiper__pagination margin-40t"></div>
        </div>
    </div>
</div>