<div class="container p-relative">
    <div class="tp-swiper tp-swiper--reviews js-swiper p-relative">
        <div class="tp-swiper__container swiper-container" data-slides="3" data-slides_lg="2" data-slides_sm="1"
            data-simulate_touch="true" data-speed="700"
            data-spaces="50"  data-spaces_md="30"
        >
            <div class="swiper-wrapper tp-swiper__wrapper">
            {% for item in reviews %}
                <div class="swiper-slide tp-swiper__slide">
                    {% include "../elements/review.njk" %}
                </div>
            {% endfor %}
            </div>
        </div>
        <div class="swiper-button-prev tp-swiper__prev"></div>
        <div class="swiper-button-next tp-swiper__next"></div>
        <div class="swiper-pagination tp-swiper__pagination"></div>
    </div>
</div>